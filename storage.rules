rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Receipts: /receipts/{userId}/{file}
    match /receipts/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId && request.resource.size < 5 * 1024 * 1024; // <5MB
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
